<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/simpleTableLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">

    <TableRow

        android:id="@+id/nameRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView

            android:id="@+id/ameLabel"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:background="#b0b0b0"
            android:padding="18dip"
            android:text="Imię"
            android:textColor="#000"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/nameValue"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:ems="10"
            android:inputType="textPersonName" />

    </TableRow>

    <TableRow

        android:id="@+id/surnameRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView

            android:id="@+id/surnameLabel"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:background="#b0b0b0"
            android:padding="18dip"
            android:text="Nazwisko"
            android:textColor="#000"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/surnameValue"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:ems="10"
            android:inputType="textPersonName" />

    </TableRow>

    <TableRow

        android:id="@+id/marksRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView

            android:id="@+id/marksLabel"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:background="#b0b0b0"
            android:padding="18dip"
            android:text="Liczba ocen"
            android:textColor="#000"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/marksValue"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:ems="10"
            android:inputType="textPersonName" />

    </TableRow>

    <TableRow

        android:id="@+id/marksAverageResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="invisible">

        <TextView

            android:id="@+id/marksAverageLabel"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:background="#b0b0b0"
            android:padding="18dip"
            android:text="Twoja średnia"
            android:textColor="#000"
            android:textSize="12dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/marksAverageValue"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="0.00"
            android:visibility="visible" />

    </TableRow>
    <Button
        android:id="@+id/showMarksAverageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dodaj oceny"
        android:visibility="visible" />
    <Button
        android:id="@+id/end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Koniec"
        android:visibility="visible" />
</TableLayout>